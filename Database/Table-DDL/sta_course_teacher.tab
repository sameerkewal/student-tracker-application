create table sta_course_teacher(
    id number generated by default on null as identity,
    crse_id number not null,
    tchr_id number not null,
    constraint sta_crse_tchr_pk primary key(id),
    constraint sta_crse_tchr_crse_fk foreign key(crse_id)references sta_course,
    constraint sta_crse_tchr_tchr_fk foreign key(tchr_id)references sta_teacher
);

comment on table sta_course_teacher is 'Table to store the relationship between courses and teachers';




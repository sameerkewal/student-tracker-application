CREATE TABLE sta_semester
(
    ID         NUMBER generated by default on null as identity
        constraint sta_smsr_pk
        primary key,
    NAME       VARCHAR2(40) not null,
    schoolyear varchar2(9) not null,
    START_DATE DATE         not null,
    END_DATE   DATE         not null,
    ACTIVE_IND BOOLEAN      not null,
    constraint sta_smsr_UK1
        unique (START_DATE, END_DATE),
    constraint sta_smsr_CHK1
        check (START_DATE < END_DATE)
);

CREATE UNIQUE INDEX sta_smsr_ID1
    ON sta_semester (LOWER("NAME"));


drop table sta_semester;

select  *
from    user_cons_columns
where   constraint_name in ('STA_SMSR_UK1', 'STA_SMSR_UK2')
;
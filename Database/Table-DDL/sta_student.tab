create table sta_student
(
    id           number generated by default on null as identity
        constraint sta_sdnt_pk
            primary key,
    first_name   varchar2(80)  not null,
    middle_name  varchar2(80),
    last_name    varchar2(80)  not null,
    birthday     date          not null,
    address1     varchar2(100) not null,
    address2     varchar2(100),
    phone_number varchar2(20),
    ctkr_id      number
        constraint sta_sdnt_ctkr_fk
            references sta_caretaker,
    remarks      varchar2(4000)
)
/

create unique index sta_sdnt_ix1
    on sta_student (LOWER("FIRST_NAME"), LOWER("LAST_NAME"), BIRTHDAY)
    ;
drop table STA_STUDENT;